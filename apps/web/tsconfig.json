{
  "include": ["app", "react-router.config.ts", "vite.config.ts", ".react-router/types/**/*", "server.ts"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@shared/*": ["../../packages/shared/src/*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@vector/*": ["../../packages/vector/src/*"],
      "@db/*": ["../../packages/db/src/*"],
      "@ai/*": ["../../packages/ai/src/*"],
      "@search/*": ["../../packages/search/src/*"],
      "@immich/*": ["../../packages/immich/src/*"],
      "@media-utils/*": ["../../packages/media-utils/src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  }
}
