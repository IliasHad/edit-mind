{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDirs": ["./src", "../.."],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../packages/shared/src/*"],
      "@ai/*": ["../../packages/ai/src/*"],
      "@vector/*": ["../../packages/vector/src/*"],
      "@db/*": ["../../packages/db/src/*"],
      "@media-utils/*": ["../../packages/media-utils/src/*"],
      "@search/*": ["../../packages/search/src/*"],
      "@immich/*": ["../../packages/immich/src/*"],
      "@smart-collections/*": ["../../packages/smart-collections/src/*"],
      "@background-jobs/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules", "dist"]
}
